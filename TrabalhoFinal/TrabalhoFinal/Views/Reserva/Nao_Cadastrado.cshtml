@{
    Layout = "~/Views/Master.cshtml";
}
<head>
    <title>Restaurante Luxo IV - Reserva</title>
</head>
<div class="div-pedido text-center col-md-4 col-md-offset-4">
    <div class=" text-center">
        <div class="row mt-10">
            <div class="col-md-12">
                <h1 class="text-primary text-center text-dark">Reserva</h1>
            </div>
        </div>
    </div>
    <div class="text-center col-md-12">
        <label for="campo-nome">Nome</label>
        <input type="text" name="Reserva.Nome" id="campo-nome" placeholder="Qual seu nome?" />
    </div>
    <div>
        <label for="campo-celular">Celular</label>
        <input type="tel" name="Reserva.Celular" id="campo-celular" />
    </div>
    <div>
        <label for="campo-cpf">CPF</label>
        <input type="text" name="Reserva.Cpf" id="campo-cpf" />
    </div>
    <div>
        <label for="campo-horario">Horário da reserva</label>
        <input type="time" name="Reserva.Horario" id="campo-horario" />
    </div>
    <div>
        <label for="campo-pagamento">Foma de pagamento</label>
        <select class="dropdown">
            <option value="dinheiro">Dineiro</option>
            <option value="cartao_debito">Cartão de Débito</option>
            <option value="cartao_credito">Cartão de Crédito</option>
        </select>
    </div>
    
    <button class="btn btn-success" type="submit">
        <i class="fa fa-save"></i> Confirmar
    </button>
</div>
@section css {
    <link rel="stylesheet" href="~/Content/CSS/pagina-reserva.css" />
}