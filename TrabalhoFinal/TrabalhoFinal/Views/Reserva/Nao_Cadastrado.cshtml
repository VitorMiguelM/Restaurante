@{
    Layout = "~/Views/Master.cshtml";
}
<form action="/Cliente/Index" method="post" onsubmit="validarFormulario()">
    <div class="text-center col-md-4 col-md-offset-4">
        <div class=" text-center">
            <div class="row mt-10">
                <div class="col-md-12">
                    <h1 class="text-primary text-center text-dark">Reserva</h1>
                </div>
            </div>
        </div>
        <div class="text-left">
            <label for="campo-nome">Nome</label>
            <input type="text" name="Reserva.Nome" class="form-control" id="campo-nome" placeholder="Qual seu nome?" required="required" />
            @Html.ValidationMessage("Reserva.Nome", new { @class = "text-danger" })
        </div>
        <div class="text-left">
            <label for="campo-celular">Celular</label>
            <input type="tel" name="Reserva.Celular" class="form-control" id="campo-celular" required="required" />
            @Html.ValidationMessage("Reserva.Celular", new { @class = "text-danger" })
        </div>
        <div class="text-left">
            <label for="campo-cpf">CPF</label>
            <input type="text" name="Reserva.Cpf" class="form-control" id="campo-cpf" required="required" />
            @Html.ValidationMessage("Reserva.Cpf", new { @class = "text-danger" })
        </div>
        <div class="text-left form-group">
            <label for="campo-pagamento" class="text-left form-group" required="required">Foma de pagamento</label>
            <select class="dropdown" required="required">
                <option value="dinheiro">Dineiro</option>
                <option value="cartao_debito">Cartão de Débito</option>
                <option value="cartao_credito">Cartão de Crédito</option>
                @Html.ValidationMessage("Reserva.Nome", new { @class = "text-danger" })
            </select>

        </div>

        <button class="btn btn-success" type="submit">
            <i class="fa fa-save"></i> Confirmar
        </button>
    </div>
</form>
@section css {
    <link rel="stylesheet" href="~/Content/CSS/pagina-reserva.css" />
}
