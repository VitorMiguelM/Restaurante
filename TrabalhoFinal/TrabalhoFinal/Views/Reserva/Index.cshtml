<body>
    <nav class="navbar navbarinverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header float-right">
                <button id="botao-menu" type="button" class="navbar-toggle" data-toggle="collapse" data-target="#links-menu" style="background-color: white;">
                    <i class="material-icon">menu</i>
                </button>
            </div>
            <nav id="links-menu" class="collapse navbar-collapse navbar-expand-sm">
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="#">Início</a></li>
