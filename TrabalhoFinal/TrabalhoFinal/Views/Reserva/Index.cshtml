@{
    Layout = "~/Views/Master.cshtml";
}

<form action="/Reserva/Index" method="post" onsubmit="validarFormulario()">
    <div class="col-md-4 col-md-offset-4" style="text-align:center;">
        <div class="row mt-10">
            <div class="col-md-12">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <h1 class="text-primary text-center text-dark">Login</h1>
            </div>
        </div>
        <div class="row mt-5">
            <div class="col-md-12 text-lg-right">
                <div id="show-signup" class="h-flex h-flex-grow justify-end h-hidden-phone">
                    <a class="button text-dark" href="/cliente/store">Inscrever-se</a>
                </div>
            </div>
        </div>
        <div class="row mt-5 text-left">
            <div class="col-md-12" display>
                <label for="login">Login</label>
                <input type="text" name="login" id="login" class="form-control" placeholder="Email" tabindex="1" required="required" />
                @Html.ValidationMessage("Reserva.Login", new { @class = "text-danger" })
            </div>
            <div class="col-md-12">
                <label for="senha">Senha</label>
                <input type="password" name="senha" id="senha" class="form-control" placeholder="Senha" tabindex="2" required="required" />
                @Html.ValidationMessage("Reserva.Senha", new { @class = "text-danger" })
            </div>
        </div>
        <div row class="h-hidden-native mb-15 text-center">
            <label for="remember_me" class="h-flex align-items-center fw-400">
                <input type="checkbox" name="remember_me" id="remember_me" value="1" checked="checked" tabindex="3" />
                <span class="pl-3 lh-10%">Lembrar de mim</span>
            </label>
        </div>
        <button class="btn btn-success text-center" type="submit">
            <i class="fa fa-save"></i>Cadastrar
        </button>
        <a href="/Reserva/Nao_Cadastrado" type="submit">Pular</a>
    </div>
    <div class="text-center">
    </div>
</form>
@section css {
    <link rel="stylesheet" href="~/Content/CSS/pagina-reserva.css" />
}