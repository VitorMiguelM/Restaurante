                </ul>
            </nav>
        </div>
    </nav>

    <div class="row mt-5">
        <div class="col-md-12">
            <div id="show-signup" class="h-flex h-flex-grow justify-end h-hidden-phone">
                <a class="button" href="/cliente/store">Inscrever-se</a>
            </div>
        </div>
    </div>


    <div>
        <div class="row mt-5">
            <div class="col-md-12">
                <h5 class="text-primary text-center">Login</h5>
            </div>
        </div>
        <div class="row mt-5">
            <div class="col-md-12">
                <label for="login">Login</label>
                <input type="text" name="login" id="login" placeholder="Email" tabindex="1" />
            </div>
            <div class="col-md-12">
                <label for="senha">Senha</label>
                <input type="password" name="senha" id="senha" placeholder="Senha" tabindex="2" />
            </div>
        </div>
    </div>

    <div row class="h-hidden-native mb-15">
        <label for="remember_me" class="h-flex align-items-center fw-400">
            <input type="checkbox" name="remember_me" id="remember_me" value="1" checked="checked" />
            <span class="pl-3 lh-10%">Lembrar de mim</span>
        </label>
    </div>

    <input type="button" name="commit" value="Entrar" id="btn_signin" tabindex="3" class="btn-default" data-disable-with="Entrar" />
</body>
