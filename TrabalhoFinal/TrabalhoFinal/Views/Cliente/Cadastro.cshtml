@{
    Layout = "~/Views/Master.cshtml";

}



<form   action="/Cliente/Store" method="post">
    <div>
        <div class="row-mt-3">
            <div class="col-md-12">
                <h1 class="text-dark text-center">Cadastro de Cliente</h1>
            </div>
        </div>
    </div>
    <div class="col-md-offset-1">
        <div>
            <div class="col-md-5" id="div-campo-nome">
                <label label for="campo-nome">Nome<span class="text-danger font-weight-bold">*</span></label>
                <input type="text" class="form-control" name="Cliente.NomeCompleto" id="campo-nome" placeholder="Digite seu nome aqui" tabindex="1" required="required" value="@ViewBag.Cliente.NomeCompleto" />
                @Html.ValidationMessage("Cliente.NomeCompleto", new { @class = "text-danger" })
            </div>
        </div>
        <div>
            <div class="col-md-5" id="div-campo-telefone">
                <label label for="campo-telefone">Telefone(Celular)<span class="text-danger font-weigth-bold">*</span></label>
                <input type="text" class="form-control" name="Cliente.Celular" id="campo-telefone" placeholder="Ex: 0000-0000" required="required" tabindex="2" value="@ViewBag.Cliente.Celular" />
                @Html.ValidationMessage("Cliente.Celular", new { @class = "text-danger" })
            </div>
        </div>
        <div>
            <div class="col-md-5" id="div-campo-data-nascimento">
                <label label for="campo-data-nascimento">Data de Nascimento<span class="text-danger font-weight-bold">*</span></label>
                <input type="date" class="form-control" name="Cliente.DataNascimento" id="campo-data-nascimento" required="required" tabindex="3" value="@ViewBag.Cliente.DataNascimento" />
                @Html.ValidationMessage("Cliente.DataNascimento", new { @class = "text-danger" })
            </div>
        </div>       
        <div>
            <div class="col-md-5 form-group" id="div-campo-cpf">
                <label label for="campo-cpf">CPF<span class="text-danger font-weight-bold">*</span></label>
                <input type="text" class="form-control" name="Cliente.CPF" id="campo-cpf" required="required" tabindex="4" value="@ViewBag.Cliente.CPF" />
                @Html.ValidationMessage("Cliente.CPF", new { @class = "text-danger" })
            </div>
        </div>
        <div>
            <div class="col-md-5 form-group" id="div-campo-cep">
                <label label for="campo-cep">CEP</label>
                <input type="text" class="form-control" name="Cliente.CEP" id="campo-cep" tabindex="5" value="@ViewBag.Cliente.CPF" />
            </div>
        </div>
        <div>
            <div class="col-md-5 form-group" id="div-campo-estado">
                <label label for="campo-estado">Estado</label>
                <input type="text" class="form-control" name="Cliente.Estado" id="campo-estado" tabindex="6" value="@ViewBag.Cliente.CPF" />
            </div>
        </div>
        <div>
            <div class="col-md-5 form-group" id="div-campo-cidade">
                <label label for="campo-cidade">Cidade</label>
                <input type="text" class="form-control" name="Cliente.Cidade" id="campo-cidade" tabindex="7" value="@ViewBag.Cliente.Cidade" />
            </div>
        </div>
        <div>
            <div class="col-md-5 form-group" id="div-campo-bairro">
                <label label for="campo-bairro">Bairro</label>
                <input type="text" class="form-contrl" name="Cliente.Bairro" id="campo-bairro" tabindex="8" value="@ViewBag.Cliente.Bairro" />
            </div>
        </div>
        <div>
            <div class="col-md-5 form-group" id="div-campo-logradouro">
                <label label for="campo-logradouro">Logradouro</label>
                <input type="text" class="form-control" name="Cliente.Logradouro" id="campo-logradouro" tabindex="9" value="@ViewBag.Cliente.Logradouro" />
            </div>
        </div>
        <div>
            <div class="col-md-5 " id="div-campo-email">
                <label label for="campo-email">E-mail<span class="text-danger font-weight-bold">*</span></label>
                <input type="text" class="form-control" name="Cliente.Email" id="campo-emai" placeholder="Exemplo@Exemplo.com" tabindex="10" value=@ViewBag.Cliente.Email />
            </div>
        </div>       
        <div class="botao-submit ">
            <button type="submit" class="btn btn-success" tabindex="11"><i class="fa fa-save">Cadastrar</i></button>
        </div>
    </div>
</form>


@section css {
    <link rel="stylesheet" href="~/Content/CSS/cadastro-cliente.css" />
}
