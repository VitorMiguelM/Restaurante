@{
    Layout = "~/Views/Master.cshtml";

}



<form action="/Cliente/Store" method="post" id="form1">
    <div>
        <div class="row-mt-3">
            <div class="col-md-12">
                <h1 class="text-dark text-center">Cadastro de Cliente</h1>
            </div>
        </div>
    </div>
    <div class="col-md-offset-1 campos">
        <div class="form-group">
            <div class="col-md-5" id="div-campo-nome">
                <label label for="campo-nome">Nome<span class="text-danger font-weight-bold">*</span></label>
                <input type="text" class="form-control" name="Cliente.NomeCompleto" id="campo-nome"  tabindex="1" required="required" onpaste="return false;" value="@ViewBag.Cliente.NomeCompleto" />
                @Html.ValidationMessage("Cliente.NomeCompleto", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-5" id="div-campo-telefone">
                <label label for="campo-telefone">Telefone(Celular)<span class="text-danger font-weigth-bold">*</span></label>
                <input type="text" class="form-control" name="Cliente.Celular" id="campo-telefone" placeholder="(DDD) 90000-0000" required="required" tabindex="2" maxlength="16" onkeypress="this.value = FormataTelefone(event)" onpaste="return false;" value="@ViewBag.Cliente.Celular" />
                @Html.ValidationMessage("Cliente.Celular", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-5" id="div-campo-data-nascimento">
                <label label for="campo-data-nascimento">Data de Nascimento<span class="text-danger font-weight-bold">*</span></label>
                <input type="date" class="form-control" name="Cliente.DataNascimento" id="campo-data-nascimento" required="required" tabindex="3" onpaste="return false;" value="@ViewBag.Cliente.DataNascimento" />
                @Html.ValidationMessage("Cliente.DataNascimento", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-5" id="div-campo-cpf">
                <label label for="campo-cpf">CPF<span class="text-danger font-weight-bold">*</span></label>
                <input type="text" class="form-control" name="Cliente.CPF" id="campo-cpf" required="required" tabindex="4" maxlength="14" onkeypress="this.value = FormataCpf(event)" onpaste="return false;" value="@ViewBag.Cliente.CPF" />
                @Html.ValidationMessage("Cliente.CPF", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-5" id="div-campo-cep">
                <label label for="campo-cep">CEP</label>
                <input type="text" class="form-control" name="Cliente.CEP" id="campo-cep" tabindex="5" maxlength="9" onpaste="return false;" onkeypress="this.value = FormataCep(event)" value="@ViewBag.Cliente.CEP" />
                @Html.ValidationMessage("Cliente.CEP", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-5" id="div-campo-estado">
                <label label for="campo-estado">Estado</label>
                <input type="text" class="form-control" name="Cliente.Estado" id="campo-estado" tabindex="6" onpaste="return false" value="@ViewBag.Cliente.Estado" />
                @Html.ValidationMessage("Cliente.Estado", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-5" id="div-campo-cidade">
                <label label for="campo-cidade">Cidade</label>
                <input type="text" class="form-control" name="Cliente.Cidade" id="campo-cidade" tabindex="7" onpaste="return false;" value="@ViewBag.Cliente.Cidade" />
                @Html.ValidationMessage("Cliente.Cidade", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-5" id="div-campo-bairro">
                <label label for="campo-bairro">Bairro</label>
                <input type="text" class="form-control" name="Cliente.Bairro" id="campo-bairro" tabindex="8" onpaste="return false;" value="@ViewBag.Cliente.Bairro" />
                @Html.ValidationMessage("Cliente.Bairro", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-5" id="div-campo-logradouro">
                <label label for="campo-logradouro">Logradouro</label>
                <input type="text" class="form-control" name="Cliente.Logradouro" id="campo-logradouro" tabindex="9" onpaste="return false;" value="@ViewBag.Cliente.Logradouro" />
                @Html.ValidationMessage("Cliente.Logradouro", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-5" id="div-campo-email">
                <label label for="campo-email">E-mail<span class="text-danger font-weight-bold">*</span></label>
                <input type="text" class="form-control" name="Cliente.Email" id="campo-email" placeholder="exemplo@exemplo.com" tabindex="10" onpaste="return false;" value=@ViewBag.Cliente.Email />
                @Html.ValidationMessage("Cliente.Email", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-5" id="div-campo-login">
                <label label for="campo-login">Login<span class="text-danger font-weight-bold">*</span></label>
                <input type="text" class="form-control" name="Cliente.Login" id="campo-login" placeholder="Digite seu Login" tabindex="11" onpaste="return false;" value="@ViewBag.Cliente.Login" />
                @Html.ValidationMessage("Cliente.Login", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-5" id="div-campo-senha">
                <label label for="campo-senha">Senha<span class="text-danger font-weight-bold">*</span></label>
                <input type="password" class="form-control" name="Cliente.Senha" id="campo-senha" placeholder="Digite sua senha" tabindex="12" onpaste="return false;" value="@ViewBag.Cliente.Senha" />
                @Html.ValidationMessage("Cliente.Senha", new { @class = "text-danger" })
            </div>
        </div>
        <div>
            <button type="submit" class="btn btn-success" form="form1">Cadastrar</button>
        </div>
    </div>
</form>
 



@section css {
    <link rel="stylesheet" href="~/Content/CSS/cadastro-cliente.css" />
}