@{
    Layout = "~/Views/Master.cshtml";
}

<!DOCTYPE html>

<html>
<head lang="pt-br">
    <title>Restaurante Luxo IV - Funcionarios</title>

</head>
<body>
    <div class="div-funcionario col-md-4 col-md-offset-4" style="text-align:center:">
        <div class="row mt-5">
            <div class="col-md-12">
                <h1 class="text-primary text-center text-dark">Login</h1>
            </div>
        </div>

        <div class="row mt-5">
            <div class="col-md-12 text-lg-right">
                <div id="show-signup" class="h-flex h-flex-grow justify-end h-hidden-phone">
                    <a class="button text-dark" href="/Funcionario/store">Inscrever-se</a>
                </div>
            </div>
        </div>


        <div class="row mt-5 text-center">
            <div class="col-md-12" display>
                <label for="login">Login</label>
                <input type="text" name="login" id="login" class="form-control" placeholder="Email" tabindex="1" />
            </div>
            <div class="col-md-12">
                <label for="senha">Senha</label>
                <input type="password" name="senha" id="senha" class="form-control" placeholder="Senha" tabindex="2" />
            </div>
        </div>
        <div row class="h-hidden-native mb-15 ">
            <label for="remember_me" class="h-flex align-items-center fw-400">
                <input type="checkbox" name="remember_me" id="remember_me" value="1" checked="checked" tabindex="3" />
                <span class="pl-3 lh-10%">Lembrar de mim</span>
            </label>
        </div>
        <div class="text-center">
            <a href="/Funcionario/Editar?Id=3" class="btn btn-primary text-center">Entrar</a>
        </div>
    </div>
</body>
</html>

