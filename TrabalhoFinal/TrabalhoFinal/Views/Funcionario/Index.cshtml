@{
    Layout = "~/Views/Master.cshtml";
}

<form action="/Funcionario/Editar" method="post" onsubmit="validarFormulario()">
    <div class="div-reserva col-md-4 col-md-offset-4" style="text-align:center;">
        <div class="row mt-10">
            <div class="col-md-12">
                <h1 class="text-primary text-center text-dark">Login</h1>
            </div>
        </div>
        <div class="row mt-5">
            <div class="col-md-12 text-lg-right">
                <div id="show-signup" class="h-flex h-flex-grow justify-end h-hidden-phone">
                    <a class="button text-dark" href="/cliente/store">Inscrever-se</a>
                </div>
            </div>
        </div>
        <div class="row mt-5 text-left">
            <div class="col-md-12" display>
                <label for="login">Login</label>
                <input type="text" name="login" id="login" class="form-control" placeholder="Email" tabindex="1" required="required" />
                @Html.ValidationMessage("Reserva.Login", new { @class = "text-danger" })
            </div>
            <div class="col-md-12 text-left">
                <label for="senha">Senha</label>
                <input type="password" name="senha" id="senha" class="form-control" placeholder="Senha" tabindex="2" required="required" />
                @Html.ValidationMessage("Reserva.Senha", new { @class = "text-danger" })
            </div>
        </div>
        <div row class="h-hidden-native mb-15 text-left">
            <label for="remember_me" class="h-flex align-items-center fw-400">
                <input type="checkbox" name="remember_me" id="remember_me" value="1" checked="checked" tabindex="3" />
                <span class="pl-3 lh-10%">Lembrar de mim</span>
            </label>
        </div>
        <button class="btn btn-success text-center" type="submit">
            <i class="fa fa-save"></i>Cadastrar
        </button>
    </div>
    <div class="text-center">
    </div>
</form>
<form>
    <div class="mr-3 ml-3">
        <table class="table table-striped table-hover">
            <thead>
                <tr>ID</tr>
                <tr>Funcionario</tr>
                <tr>Cargo</tr>
                <tr>Pontos</tr>
            </thead>
            <tbody>
                @foreach (TrabalhoFinal.Models.Funcionarios funcionarios in @ViewBag.Funcionarios)
                {
                    <tr>
                        <td>@funcionarios.Id</td>
                        <td>@funcionarios.Nome</td>
                        <td>@funcionarios.Cargo</td>
                        <td>
                            <a href="/funcionario/Excluir?id=@funcionarios" class="btn btn-outline-success"><i class="fa fa-trash"></i>Excluir</a>
                            <a href="/funcionario/Editar?id=@funcionarios" class="btn btn-outline-success"><i class="fa fa-adjust"></i>Editar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</form>

