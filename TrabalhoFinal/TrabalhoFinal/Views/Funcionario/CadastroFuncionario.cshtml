@{
    Layout = "~/Views/Master.cshtml";
}


<form action="/funcionarios/Store" method="post" onsubmit="validarFormulario()">
    <div class="form-group" id="div-campo-nome">
        <label for="campo-nome">Nome<span class="text-danger">*</span></label>
        <input type="text" name="Funcionarios.Nome" id="campo-nome" class="form-control" placeholder="Digite seu nome" required="required" onfocus="validarCampoNome()"/>
        @Html.ValidationMessage("funcionarios.Nome", new { @class = "text-danger" });
    </div>
    <div class="form-group">
        <label for="campo-sobrenome">Sobrenome<span class="text-danger">*</span></label>
        <input type="text" name="Funcionarios.sobrenome" id="campo-sobrenome" class="form-control" placeholder="Digite seu sobrenome" required="required" onfocus="ValidarCampoSobrenome()"/>
        @Html.ValidationMessage("funcionarios.Sobrenome", new { @class = "text-danger" });
    </div>
    <div class="form-group">
        <label for="campo-cpf">CPF<span class="text-danger">*</span></label>
        <input type="text" name="Funcionarios.CPF" id="campo-nome" class="form-control" placeholder="Digite sseu cpf" required="required" value="@ViewBag.Funcionarios.CPF"/>
        @Html.ValidationMessage("funcioonarios.CPF", new { @class = "text-danger" });
    </div>
    <div class="form-group">
        <label for="campo-estado">Estado<span class="text-danger">*</span></label>
        <select id="campo-estado" name="Funcionarios.Estado" class="form-control" required="required">
            <option class="acre">Acre AC</option>
            <option class="alagoas">Alagoas AL</option>
            <option class="amapa">Amapá AP</option>
            <option class="amazonas">Amazonas AM</option>
            <option class="bahia">Bahia BA</option>
            <option class="ceara">Ceará CE</option>
            <option class="distritofederal">Distrito Federal DF</option>
            <option class="espiritosantos">Espírito Santo ES</option>
            <option class="goias">Goiás GO</option>
            <option class="maranhao">Maranhão MA</option>
            <option class="matogrosso">Mato Grosso MT</option>
            <option class="matogrossodosul">Mato Grosso do Sul MS</option>
            <option class="minasgerais">Minas Gerais MG</option>
            <option class="para">Pará PA</option>
            <option class="paraiba">Paraíba PB</option>
            <option class="parana">Paraná PR</option>
            <option class="pernambuco">Pernambuco PE</option>
            <option class="piaui">Piauí PI</option>
            <option class="riodejaneiro">Rio de Janeiro RJ</option>
            <option class="riograndedonorte">Rio Grande do Norte RN</option>
            <option class="riograbdedosul">Rio Grande do Sul RS </option>
            <option class="rondonia">Rondônia RO</option>
            <option class="roraima">Roraima RR</option>
            <option class="santacatarina">Santa Catarina SC</option>
            <option class="saopaulo">São Paulo SP</option>
            <option class="sergipe">Sergipe SE</option>
            <option class="tocantins">Tocantins TO</option> 
        </select>
    </div>

</form>