</body>
<h1>Seu Prato!</h1>

<div class="form-group" id="div-campo-nome">
    <label for="campo-nome">
        Nome
        <span class="text-danger font-weight-bold">*</span>
    </label>
    <input type="text" class="form-control" name="Restaurante.Nome" id="campo-nome" placeholder="Digite o seu nome" required="required" onfocus="validarCampoNome()"
           value="@ViewBag.Restaurante.Nome"/>
    @Html.ValidationMessage("Restaurante.Nome", new { @class = "text-danger" })
</div>
<div class="form-group" id="div-campo-preparo">
    <label for="campo-preparo">Modo De Preparo</label>
    <input type="text " class="form-control" name="Restaurante.preparo" id="campo-preparo" id="campo-preparo" placeholder="escreva o preparo completo de seu prato"
           riquered="riquered" onfocus="ValuidaCampoPreparo()"
           value="@ViewBag.Restaurante.Preparo"/>
   @Html.ValidationMessage("Restaurante.preparo", new { @class = "text-danger" })
</div>
<div class="form-group" id="div-campo-prato">
    <label form="campo-Propriedades-Nutricionais">Propriedades Nutricionais</label>
    <input type="text" class="form-control" name="Restaurante.Propietades.Nutrisionais"  id="campo-PropiedadesNaturais"
  placeholder="Digite  dijite as propiedades Nutricionais" required="required" onfocus="ValidarCampoPropiedadesNutricionais()"
           value="@ViewBag.Restaurante.PropiedadesNutricionais"/>
    @Html.ValidationMessage("Restaurante.PropiedadesNutricionais", new { @class = "text-danger" })
</div>
<div class="form-group"id="div-campo-preco">
        <label for="Campo-Preco">
            Preço
        </label>
        <input type="text"class="form-control"name="RestaorantePreco"id="Campo-Preco"placeholder="Dijite o Preço"required="required"onfocus="ValidarCampoPreco()"
               value="@ViewBag.Restaurante.Preco" />
    @Html.ValidationMessage("Restaurante.Preco", new  { @class="text-danger"})
</div>
<div class="form-group" id="div-campo-Email">
    <label form="Campo-Email">E-mail</label>
    <input type="text"class="form-control"name="ResteoranteEmail"id="Campo-Email"placeholder="Digite seu E-mail"required="required"onfocus="ValidarCampoEmail()"
           value="@ViewBag.Restaurante.Email" />
    @Html.ValidationMessage("Restaurante.Email", new  { @class="text-danger"})

</div>
<div class="form-group"id="div-campo-Celular">
    <label for="CampoCelular">
        Telefone Celular
    </label>
