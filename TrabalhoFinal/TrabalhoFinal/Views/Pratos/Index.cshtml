@{
    Layout = "~/Views/Master.cshtml";
}
@Html.ActionLink("Novo Pratos", "CadastroPrato", "Pratos",
    new { @class = "btn btn-primary float-right mr-3 mb-2 mt-2" })




<head>
    <meta name="viewport" content="width=device-width" />
    <title>Prato</title>
</head>
<body>
    <div class="mr-3 ml-3">

        <table class="table table-striped table-hover">
            <thead>
                <tr class="bg-secondary table-hover">
                    <th>Nome</th>
                    <th>ModoDePreparo</th>
                    <th>PropiedadesNaturais</th>
                    <th>Email</th>
                    <th>TelefoneCelular</th>
                    <th>deszcricao</th>
                </tr>
            </thead>
            <tbody>
            @foreach (TrabalhoFinal.Models.Pratos Prato in @ViewBag.Pratos)
            {
                <tr>
                    <td>@Prato.Id</td>
                    <td>@Prato.Nome</td>
                    <td>@Prato.ModoDePreparo</td>
                    <td>@Prato.Propriedades_Nutricionais</td>
                    <td>@Prato.Email</td>
                    <td>@Prato.Celular</td>
                    <td>@Prato.Mensagem</td>
                    <td>
                        <a href="/Pratos/Excluir?id=@Prato.Id" class="btn btn-outline-danger"><i class="fa fa-trash"></i>Excluir</a>
                      
                       <!-- <a href="/Pratos/Editar?id=@Prato.Id" class="btn btn-outline-success">  <i class="fa fa-adjust"></i> Editar</a>-->
                        <a class="btn btn-outline-success float-md-none" href="/Pratos/CadastroPrato?Length=6"><i class="fa fa-adjust"></i>Editar</a>
</td>

                </tr>

            }
          </tbody>
        <tfoot>
                <tr class="bg-secondary text-white">
                    <th>Nome</th>
                    <th>ModoDePreparo</th>
                    <th>PropiedadesNaturais</th>
                    <th>Email</th>
                    <th>TelefoneCelular</th>
                    <th>deszcricao</th>
                </tr>
            </tfoot>
        </table>

    </div>
    <button class="btn btn-outline-dark my-2 my-sm-0" type="submit">
        <i class="fa fa-save"></i> Cadastrar
    </button>
</body>


