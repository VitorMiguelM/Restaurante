@{
    Layout = "~/Views/Master.cshtml";
}

<div class="mr-3 ml-3">

    <table class="table table-striped table-hover">
        <thead>
            <tr class="bg-dark text-white">
                <th>Nome</th>
                <th> Celular</th>
                <th>Email</th>
                <th>preço</th>
                <th>PropiedadesNaturais</th>
                <th>ModoDePreparo</th>
                <th>Descrição</th>
                <th>Ação</th>
            </tr>
        </thead>
        <tbody>
            @foreach (TrabalhoFinal.Models.Prato Prato in @ViewBag.Pratos)
            {
                <tr>

                    <td>@Prato.Nome</td>
                    <td>@Prato.Celular</td>
                    <th>@Prato.Email</th>
                    <th>@Prato.preco</th>
                    <td>@Prato.Propriedades_Nutricionais</td>
                    <td>@Prato.ModoDePreparo</td>
                    <td>@Prato.Descricao</td>
                    <td>
                        <a href="/Pratos/Excluir?id=@Prato.Id" class="btn btn-outline-danger"><i class="fa fa-trash"></i>Excluir</a>

                        <a href="/Pratos/Editar?id=@Prato.Id" class="btn btn-outline-success"><i class="fa fa-adjust"></i> Editar</a>

                    </td>

                </tr>

            }
        </tbody>
        <tfoot>
            <tr>
                <th>Nome</th>
                <th> Celular</th>
                <th>Email</th>
                <th>preço</th>
                <th>PropiedadesNaturais</th>
                <th>ModoDePreparo</th>
                <th>Descrição</th>
                <th>Ação</th>
            </tr>
        </tfoot>
    </table>

</div>


@section css {
    <link rel="stylesheet" href="~/Content/CSS/cadastro-cliente.css" />
}