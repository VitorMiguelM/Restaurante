           value="@ViewBag.Restaurante.Celular"/>
    @Html.ValidationMessage("Restaurante.Celular", new  { @class="text-danger"})
</div>
<div class="form-group" id="div-campo-Mensagem">
    <label for="CampoMansagem">
        Mensagem
    </label>
    <input type="text" class="from-control" name="RestauranteMensagem" id="Campo-Mengem" placeholder="Dijite sua Mensagem" required="required" onfocus="ValidarMensagem()"
           value="@ViewBag.Restaurante.Mensagem" />
    @Html.ValidationMessage("Restaurante.Mensagem", new { @class = "text-danger" })
</div>


</html>
