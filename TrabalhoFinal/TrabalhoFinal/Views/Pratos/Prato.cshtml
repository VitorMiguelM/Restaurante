@{
    Layout = "~/Views/Master.cshtml";
}


<html>
<head lang="pt-br">
    <meta charset="utf-8" />
    <meta http-equiv=”content-type” content="text/html;" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/Content/CSS/pagina-inicial.css" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" />
    @RenderSection("css", false)
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js" integrity="sha384-h0AbiXch4ZDo7tp9hKZ4TsHbi047NrKGLO3SEJAg45jXxnGIfYzk4Si90RDIqNm1" crossorigin="anonymous"></script>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.TituloPagina</title>

</head>
<!--<meta name="viewport" content="width=device-width" />
<title>Pratos</title>-->

<body>
    <h1>Seu Prato!</h1>

    <!--<div class="form-control"id="div-campo-imagem">
        <img src="" class="rounded float-right" alt="">
        <input type="file" class="form-control-file" name="Restaurante.Foto" required="required" onfocus="validarCampoNome()"/>
    </div>-->


    <div class="form-group" id="div-campo-nome">
        <label for="campo-nome">
            Nome

        </label>
        <input type="text" class="form-control" name="Restaurante.Nome" id="campo-nome" aria-describedby="Nome" placeholder="Digite o seu nome" required="required" onfocus="validarCampoNome()"
               value="@ViewBag.Pratos.Nome" />
        @Html.ValidationMessage("Restaurante.Nome", new { @class = "text-danger" })
    </div>
    <div class="form-group" id="div-campo-preparo">
        <label for="campo-preparo">Modo De Preparo</label>
        <input type="text" class="from-control" name="RestaurantePreparo" id="Campo-Preparo" aria-describedby="Campo-Preparo" placeholder="Dijite o modo de prepare" required="required" onfocus="ValidarMensagem()"
               value="@ViewBag.Pratos.Preparo" /><textarea class="form-control" aria-label="Preparo"></textarea>

        @Html.ValidationMessage("Restaurante.preparo", new { @class = "text-danger" })
    </div>
    <div class="form-group" id="div-campo-prato">
        <label form="campo-Propriedades-Nutricionais">Propriedades Nutricionais</label>
        <input type="text" class="form-control" name="Restaurante.Propietades.Nutrisionais" id="campo-PropiedadesNaturais" aria-describedby="Propiedades-Naturais"
               placeholder="Digite  dijite as propiedades Nutricionais" required="required" onfocus="ValidarCampoPropiedadesNutricionais()"
               value="@ViewBag.Pratos.PropiedadesNutricionais" />
        @Html.ValidationMessage("Restaurante.PropiedadesNutricionais", new { @class = "text-danger" })
    </div>
    <div class="form-group" id="div-campo-preco">
        <div class="form-group col-md-6">
            <label for="Campo-Preco">
                Preço
            </label>
            <input type="text" class="form-control" name="RestaorantePreco" id="Campo-Preco" placeholder="Dijite o Preço" required="required" onfocus="ValidarCampoPreco()"
                   value="@ViewBag.Pratos.Preco" />
            @Html.ValidationMessage("Restaurante.Preco", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group" id="div-campo-Celular">
        <div class="form-group col-md-6">
            <label for="CampoCelular">
                Telefone Celular
            </label>
            <input type="text" class="from-control" name="RestauranteCelular" id="Campo-Celular" placeholder="Digite seu Telefone Celular" required="required" onfocus="ValidarCampoCelular()"
                   value="@ViewBag.Pratos.Celular" />
            @Html.ValidationMessage("Restaurante.Celular", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group" id="div-campo-Email">
        <label form="Campo-Email">E-mail</label>
        <input type="text" class="form-control" name="ResteoranteEmail" id="Campo-Email" aria-describedby="Campo-Email" placeholder="Digite seu E-mail" required="required" onfocus="ValidarCampoEmail()"
               value="@ViewBag.Pratos.Email" />
        @Html.ValidationMessage("Restaurante.Email", new { @class = "text-danger" })

    </div>
    <div class="form-group" id="div-campo-Mensagem">
        <label for="CampoMansagem">
            Mensagem
        </label>
        <input type="text" class="from-control" name="RestauranteMensagem" id="Campo-Mengem" placeholder="Dijite sua Mensagem" required="required" onfocus="ValidarMensagem()"
               value="@ViewBag.Pratos.Mensagem" />

        @Html.ValidationMessage("Restaurante.Mensagem", new { @class = "text-danger" })
    </div>



</html>