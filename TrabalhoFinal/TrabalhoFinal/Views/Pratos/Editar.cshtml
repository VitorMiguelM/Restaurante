
@{
    Layout = "~/Views/Master.cshtml";
}

<div class="row mt-3">
    <div class="col-md-12">
        <h1 class="text-dark text-center ">Editando</h1>
    </div>
</div>
<div class="row">
    <div class="col-md-8 offset-md-2">
        <form action="/Prato/Update" method="post" onsubmit="validarFormulario()">
            <input type="hidden" name="Prato.id" value="@ViewBag.Prato.Id" />
            <div class="form-group">
                <label for="campo-nome">Nome</label>
                <input type="text" class="form-control" id="campo-nome" value="@ViewBag.Prato.Nome" />
            </div>
            <div class="form-group">
                <label for="campo-email">Email </label>
                <input type="text" class="form-control" id="campo-email" placeholder="name@example.com" value="@ViewBag.Prato.Email" />
            </div>

            <div class="form-group">
                <label form="campo-preparo">Modo de preparo</label>
                <textarea type="text" class="from-control" name="Prato.preparo" id="campo-modo_preparo" style="width:100%; height:auto" required="required" onfocus="ValidarDescricao()">
                    @ViewBag.Prato.Descricao
                </textarea>
            </div>




            <div class="form-group">
                <label for="CampoDescricao">Descrição</label>
                <textarea type="text" class="from-control" name="Prato.Descricao" id="Campo-Descricao" style="width:100%; height:auto" required="required" onfocus="ValidarDescricao()">
                    @ViewBag.Prato.Descricao
                </textarea>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <button type="submit" class="btn btn-warning float-right" data-toggle="tooltip" title="Botão para salvar">
                        <i class="fa fa-pencil-alt"></i> Salvar
                    </button>
                </div>
            </div>

        </form>


    </div>
</div>


